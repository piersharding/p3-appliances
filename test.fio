[global]
ioengine=libaio
direct=1
invalidate=1
ramp_time=5
size=10G
iodepth=16
runtime=30
time_based
numjobs=1
loops=1
fsync_on_close=1
randrepeat=1
norandommap
per_job_logs=0
bs=32k
 
[write-fio-32k-para]
stonewall
filename=/var/lib/testfs/fiowrite
rw=randwrite
write_bw_log=32k-write.results
write_iops_log=32k-write.results
write_lat_log=32k-write.results
 
[read-fio-32k-para]
stonewall
filename=/var/lib/testfs/fioread
rw=randread
write_bw_log=32k-read.results
write_iops_log=32k-read.results
write_lat_log=32k-read.results