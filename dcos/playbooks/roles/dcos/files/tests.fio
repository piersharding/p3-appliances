[global]
ioengine=libaio
direct=1
invalidate=1
ramp_time=5
size=10G
iodepth=16
runtime=30
time_based
numjobs=16
loops=1
fsync_on_close=1
randrepeat=1
per_job_logs=0
norandommap

[write-fio-4k-para]
bs=4k
stonewall
filename=/var/lib/testfs/fiowrite
rw=randwrite
write_bw_log=4k-write.results
write_iops_log=4k-write.results
write_lat_log=4k-write.results

[read-fio-4k-para]
bs=4k
stonewall
filename=/var/lib/testfs/fioread
rw=randread
write_bw_log=4k-read.results
write_iops_log=4k-read.results
write_lat_log=4k-read.results
